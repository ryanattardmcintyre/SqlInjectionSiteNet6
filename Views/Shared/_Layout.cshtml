<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SqlInjectionVulnerable</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SqlInjectionVulnerable.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">VulnerableApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                  
                       <!-- Link to Dashboard -->
                    <li class="nav-item">
                        <a class="btn btn-info" asp-controller="Users" asp-action="Register">Register </a>
                    </li>
                   
                   

                    <!-- Link to Items List -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Items" asp-action="Index">Items List</a>
                    </li>

                     <li class="nav-item">
                        <a class="nav-link" asp-controller="Comment" asp-action="Index">Comments</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- User's logged-in name and Logout button -->
                        <li class="nav-item">
                            <span class="nav-link">Hello, @User.Identity.Name!</span>
                        </li>

                         <!-- Link to Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                    </li>

                    <!-- Link to Change Password -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ChangePassword">Change Password</a>
                    </li>
                  
                     <li class="nav-item">
                        <a class="nav-link" asp-controller="Comment" asp-action="Create">Add Comment</a>
                    </li>

                        <li class="nav-item">
                            <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Login" asp-action="Index">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SqlInjectionVulnerable - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
