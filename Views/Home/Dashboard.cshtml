@{
    ViewData["Title"] = "Dashboard";
}

@using System.Security.Claims

<div class="container mt-4">
    <h2>Welcome to Your Dashboard</h2>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <p>Hello, <strong>@User.Identity.Name</strong>! You are logged in.</p>
        <p>Here you can manage your account, view reports, or navigate to other sections.</p>

        <div class="mt-3">
            <a class="btn btn-warning" asp-controller="Home" asp-action="ChangePassword">Change Password</a>
        </div>

        <div class="mt-3">
            <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    }
    else
    {
        <p>You are not logged in. Please <a asp-controller="Login" asp-action="Index">Login</a>.</p>
    }
</div>
